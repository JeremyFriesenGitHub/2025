theme "gruvbox-dark"

layout {
    tab name="🛖 Dashboard" focus=true hide_floating_panes=true {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        pane split_direction="vertical" {
            pane size="50%" {
                pane command="pnpm" name="🌀 Portal | 5173 | portal.cuhacking.ca" size="50%" cwd="../" {
                    args "nx" "dev" "portal"
                }
                pane command="pnpm" name="⚙ Axiom (API Layer + Admin Panel) | 8000 | axiom.cuhacking.ca" size="50%" cwd="../" {
                    args "axiom"
                }
            }
            pane size="50%" {
                pane command="pnpm" name="🎨 Storybook | 6006 | design.cuhacking.ca" size="25%" cwd="../" {
                    args "storybook"
                    start_suspended true
                }
                pane command="pnpm" name="✉ Email | 5400 | email.cuhacking.ca" focus=true size="25%" cwd="../" {
                    args "nx" "dev" "email"
                }
                pane command="pnpm" name="📚 Docs Site | 3000 | docs.cuhacking.ca" size="25%" cwd="../" {
                    args "nx" "dev" "docs"
                }
                pane command="pnpm" name="🕸 Website | 5800 | cuhacking.ca" size="25%" cwd="../" {
                    args "nx" "dev" "website"
                }
            }
        }
        pane size=1 borderless=true {
            plugin location="zellij:status-bar"
        }

        floating_panes {
               pane command="pnpm" name="💿 Database | 5432 | Nix-PostgreSQL" cwd="../" {
                args "nx" "up" "infra"
                start_suspended true
            }
        }
    }
    tab name="🛠 Infra + Docs" {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        pane split_direction="vertical" {
            pane size="50%" {
                pane command="pnpm" name="📊 Drizzle Studio | local.drizzle.studio" size="50%" cwd="../" {
                    args "nx" "studio" "db"
                }
                pane command="pnpm" name="👀 Schema Visualizer | 5600" size="50%" cwd="../" {
                    args "nx" "visualizer" "db"
                }
            }
            pane size="50%" {
                pane command="pnpm" name="🏛 Architecture Site | 6400 | arch.cuhacking.ca" size="25%" cwd="../" {
                    args "nx" "dev" "arch"
                    start_suspended true
                }
                pane name="🖼 Slides | 3030 | slides.cuhacking.ca" size="25%" command="pnpm" cwd="../" {
                args "nx" "dev" "slides"
                start_suspended true
                }
                pane name="PayloadCMS Schema, Typegen,& Importmap" size="25%" command="pnpm" cwd="../" {
                   args "nx" "types" "axiom"
                start_suspended true
                   }
                pane command="pnpm" name="🧹 ESLint Config Inspector | 7777 | eslint.cuhacking.ca" size="25%" cwd="../" {
                    args "inspect"
                    start_suspended true
                }
            }
        }
        pane size=1 borderless=true {
            plugin location="zellij:status-bar"
        }
        floating_panes {
            pane command="pnpm" name="🗺 Project Graph | 4211 | graph.cuhacking.ca" cwd="../" {
                start_suspended true
                height 25
                width 86
                x 43
                y 14
                args "graph"
            }
        }
    }
    tab name="📦 Database TUI" hide_floating_panes=true {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        pane command="lazysql" name="Lazysql" {
            args "postgres://postgres:password@127.0.0.1:5432/postgres?sslmode=disable"
        }
        pane size=1 borderless=true {
            plugin location="zellij:status-bar"
        }
    }
    tab name="🩺 System Monitor" hide_floating_panes=true {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        pane command="btop" name="btop" {
        }
        pane size=1 borderless=true {
            plugin location="zellij:status-bar"
        }
    }
    tab name="🧮 Network" hide_floating_panes=true {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        pane command="sudo" name="netscanner" {
            args "netscanner"
        }
        pane size=1 borderless=true {
            plugin location="zellij:status-bar"
        }
    }
    tab name="📁 File Browser" hide_floating_panes=true {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        pane command="yazi" name="Yazi" {
        }
        pane size=1 borderless=true {
            plugin location="zellij:status-bar"
        }
    }
    tab name="🔬 API" hide_floating_panes=true {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        pane command="atac" name="atac" {
            args "-d" "./atac/collections/"
        }
        pane size=1 borderless=true {
            plugin location="zellij:status-bar"
        }
        }
    tab name="🍒 Git" hide_floating_panes=true {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        pane command="lazygit" name="Lazygit" {
        }
        pane size=1 borderless=true {
            plugin location="zellij:status-bar"
        }
    }
}
